{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,                           
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
